<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/jetBlack"
    tools:context=".RegisterActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KULLANICI EKLEME EKRANI"
        android:textSize="29dp"
        android:padding="20dp"
        android:textColor="@color/lightText"
        android:gravity="center"
        />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/TextInputLayoutApartman"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="25dp"
        app:boxStrokeColor="@color/lightText"
        app:boxBackgroundColor="@color/darkGrey"
        android:textColorHint="@color/secondary_text"
        app:hintTextColor="@color/secondary_text"
        app:helperText="Gerekli"
        app:helperTextTextColor="@color/purple_200"
        app:counterEnabled="true"
        app:endIconMode="clear_text"
        app:endIconTint="@color/lightText">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputApartmanKayit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Apartman Ad覺"
            android:maxLength="10"
            android:inputType="text"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:maxLines="1"
            android:textCursorDrawable="@drawable/text_cursor"
            android:textColor="@color/teal_200"/>


    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/TextInputLayoutDaire"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="25dp"
        app:boxStrokeColor="@color/lightText"
        app:boxBackgroundColor="@color/darkGrey"
        android:textColorHint="@color/secondary_text"
        app:hintTextColor="@color/secondary_text"
        app:helperText="Gerekli(1-20)"
        app:helperTextTextColor="@color/purple_200"
        app:endIconMode="clear_text"
        app:endIconTint="@color/lightText">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputDaireKayit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Daire No"
            android:inputType="number"
            android:maxLines="1"
            android:maxLength="2"
            android:textCursorDrawable="@drawable/text_cursor"
            android:textColor="@color/teal_200"/>


    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/TextInputLayoutAdSoyad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="25dp"
        app:boxStrokeColor="@color/lightText"
        app:boxBackgroundColor="@color/darkGrey"
        android:textColorHint="@color/secondary_text"
        app:hintTextColor="@color/secondary_text"
        app:helperText="Gerekli"
        app:helperTextTextColor="@color/purple_200"
        app:endIconMode="clear_text"
        app:endIconTint="@color/lightText">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputAdSoyadKayit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ad Soyad"
            android:inputType="text"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
            android:maxLines="1"
            android:maxLength="25"
            android:textCursorDrawable="@drawable/text_cursor"
            android:textColor="@color/teal_200"/>


    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/TextInputLayoutTel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="25dp"
        app:boxStrokeColor="@color/lightText"
        app:boxBackgroundColor="@color/darkGrey"
        android:textColorHint="@color/secondary_text"
        app:hintTextColor="@color/secondary_text"
        app:helperText="Gerekli"
        app:helperTextTextColor="@color/purple_200"
        app:endIconMode="clear_text"
        app:endIconTint="@color/lightText"
        app:prefixText="05"
        app:prefixTextColor="@color/teal_200">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputTelKayit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Telefon Numaras覺"
            android:inputType="number"
            android:maxLines="1"
            android:maxLength="9"
            android:textCursorDrawable="@drawable/text_cursor"
            android:textColor="@color/teal_200"/>


    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/TextInputLayoutPosta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="25dp"
        app:boxStrokeColor="@color/lightText"
        app:boxBackgroundColor="@color/darkGrey"
        android:textColorHint="@color/secondary_text"
        app:hintTextColor="@color/secondary_text"
        app:helperText="Gerekli"
        app:helperTextTextColor="@color/purple_200"
        app:endIconMode="clear_text"
        app:endIconTint="@color/lightText">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputPostaKayit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="E-Posta"
            android:maxLines="1"
            android:maxLength="30"
            android:textCursorDrawable="@drawable/text_cursor"
            android:textColor="@color/teal_200"/>


    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/registerBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textColor="@color/lightText"
        android:backgroundTint="@color/purple_200"
        android:text="Kullan覺c覺 ekle"
        android:textSize="20sp"
        android:layout_margin="35dp"/>


</LinearLayout>